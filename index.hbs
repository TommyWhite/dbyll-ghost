{{!< default}}

{{! The main content area on the homepage }}

<main class="content home-content" role="main">
  {{#foreach posts}}

  <article class="home">
    <div class="post-header">
      <span class="post-date">
        <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
      </span>
      <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>

    </div>
    <section class="post-excerpt">
      <p>{{excerpt}}&hellip;</p>
    </section>

  </article>

  {{/foreach}}

  <div class="col-sm-10">
    {{pagination}}
  </div>

  <div class="clearfix"></div>
</main>
